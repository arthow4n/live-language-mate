{
  "tasks": {
    "start": "deno run --env-file --allow-net --allow-env main.ts",
    "dev": "deno run --env-file --allow-net --allow-env --watch main.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.168.0/",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "@/": "../src/"
  },
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-console"]
    }
  }
}
