{
  "name": "live-language-mate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check:all": "concurrently --group --names frontend-lint,frontend-typecheck,backend-deno-check 'npm run lint:fix' 'npm run typecheck' 'cd api && deno check'",
    "dev": "kill-port 8000 8080 && concurrently --names frontend,backend 'npm run dev:frontend' 'npm run dev:backend'",
    "dev:frontend": "vite",
    "dev:backend": "cd api && deno task dev",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "prettier": "prettier --log-level warn --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "@comment typecheck": "Run a faster frontend check for quicker feedback loop in agentic coding, using Biome lint to auto fix ts6133 unused var.",
    "typecheck": "(biome lint --write --unsafe > /dev/null) && tsgo --project tsconfig.app.json",
    "typecheck:with-projects": "tsc --build",
    "preview": "vite preview",
    "test": "concurrently --group --names frontend-test,backend-deno-test 'npm run test:frontend' 'npm run test:backend'",
    "test:frontend": "npm run typecheck && vitest run --exclude=\"api/**\"",
    "test:frontend:watch": "vitest --exclude=\"api/**\"",
    "test:backend": "cd api && deno test --allow-net --allow-env",
    "prepare": "husky"
  },
  "dependencies": {
